<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PharmacyActivity">

    <ImageView
        android:id="@+id/pharmacy_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_pharmacieName2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/hv_meduim"
        android:text="Pharmacie Name"
        android:textColor="@color/green"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pharmacy_image"
        app:layout_constraintTop_toTopOf="@+id/pharmacy_image" />

    <TextView
        android:id="@+id/tv_pharmacieName3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/hv_meduim"
        android:text="Informations"
        android:textColor="@color/green"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/divider6"
        app:layout_constraintTop_toBottomOf="@+id/divider6" />

    <TextView
        android:id="@+id/tv_adress2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Adress"
        android:textColor="@color/black_hint"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/location"
        app:layout_constraintTop_toBottomOf="@+id/tv_pharmacieName2" />

    <TextView
        android:id="@+id/tv_phone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="phone number"
        android:textColor="@color/black_hint"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/phone2"
        app:layout_constraintStart_toEndOf="@+id/phone2"
        app:layout_constraintTop_toTopOf="@+id/phone2" />

    <ImageView
        android:id="@+id/phone2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/location"
        app:layout_constraintTop_toBottomOf="@+id/tv_adress2"
        app:srcCompat="@drawable/ic_sharp_phone_24" />

    <ImageView
        android:id="@+id/btn_phone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_horraires"
        app:layout_constraintEnd_toStartOf="@+id/btn_location"
        app:layout_constraintStart_toEndOf="@+id/btn_facebook"
        app:layout_constraintTop_toTopOf="@+id/btn_horraires"
        app:srcCompat="@drawable/ic_sharp_phone_24" />

    <ImageView
        android:id="@+id/btn_facebook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_horraires"
        app:layout_constraintStart_toStartOf="@+id/phone2"
        app:layout_constraintTop_toTopOf="@+id/btn_horraires"
        app:srcCompat="@drawable/ic_icons8_facebook" />

    <Button
        android:id="@+id/btn_horraires"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/hv_meduim"
        android:text="Horraires"
        android:textAllCaps="false"
        android:textColor="@color/black_hint"
        app:layout_constraintEnd_toEndOf="@+id/pharmacy_image"
        app:layout_constraintStart_toStartOf="@+id/pharmacy_image"
        app:layout_constraintTop_toBottomOf="@+id/pharmacy_image" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_adress2"
        app:layout_constraintStart_toStartOf="@+id/tv_pharmacieName2"
        app:layout_constraintTop_toTopOf="@+id/tv_adress2"
        app:srcCompat="@drawable/ic_sharp_location_on_24" />

    <ImageView
        android:id="@+id/btn_location"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_horraires"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_horraires"
        app:srcCompat="@drawable/ic_sharp_location_on_24" />

    <View
        android:id="@+id/divider5"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/grey_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_horraires" />

    <Button
        android:id="@+id/btn_commander"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:drawableRight="@drawable/ic_commande"
        android:fontFamily="@font/hv_bold"
        android:text="Lancer une commande"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider5" />

    <View
        android:id="@+id/divider6"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/grey_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_commander" />

    <TextView
        android:id="@+id/tv_informations"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pharmacieName3" />
</androidx.constraintlayout.widget.ConstraintLayout>